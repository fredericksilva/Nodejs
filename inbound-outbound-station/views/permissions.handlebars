<div class="row">
    <div class="col-xs-12">
        <h4>All Permissions
            <div class="pull-right">
                <a href="/admin/permissions/create" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Create Permission</a>
            </div>
        </h4>
        <div class="clearfix"></div>

        <table class="table table-hover tbl-permission">
            <thead>
            <tr>
                <!--<th>#</th>-->
                <th>Name</th>
                <th>Action</th>
                <th>Status</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#each permissions }}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ action }}</td>
                    <td>
                        {{#compare status '==' 'active' }}
                            <span class="label label-primary text-capitalize">{{ status }}</span>
                        {{else}}
                            <span class="label label-danger text-capitalize">{{ status }}</span>
                        {{/compare}}
                    </td>
                    <td>
                        <a href="/admin/permissions/edit/{{ id }}" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/admin/permissions/status/{{ id }}" class="btn btn-default btn-sm">
                            {{#compare status '==' 'active' }}
                                Disable
                            {{else}}
                                Enable
                            {{/compare}}
                        </a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>


        <div class="row text-center">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li>
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                        <a href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
