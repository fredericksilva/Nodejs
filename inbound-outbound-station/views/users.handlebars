<div class="row">
    <div class="col-xs-12">
        <h4>All Users
            <div class="pull-right">
                <a href="/admin/users/create" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Create User</a>
            </div>
        </h4>
        <div class="clearfix"></div>

        <table class="table table-hover tbl-user">

            <p class="text-center pagination_text">Showing records <strong>{{ pagination.start }}</strong> to <strong>{{ pagination.end }}</strong> of <strong>{{ pagination.total }}</strong> Users</p>

            <thead>
                <tr>
                    <!--<th>#</th>-->
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Warehouse</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each users }}
                    <tr>
                        <!--<th scope="row">1</th>-->
                        <td>{{ firstname }} {{ lastname }}</td>
                        <td>{{ email }}</td>
                        <td><i class="glyphicon glyphicon-user text-success"></i> {{ get roles 'name' }} </td>
                        <td class="text-uppercase">{{ get warehouses 'name' }}</td>
                        <td>
                         {{#compare status '==' 'active' }}
                            <span class="label label-primary text-capitalize">{{ status }}</span>
                        {{else}}
                             <span class="label label-danger text-capitalize">{{ status }}</span>
                         {{/compare}}
                        </td>
                        <td>
                            <a href="/admin/users/edit/{{ id }}" class="btn btn-primary btn-sm">Edit</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>


        {{#if pagination.show }}
            <div class="col-xs-12">
                <div class="row text-center">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">

                            <li {{#unless pagination.prev }}class="disabled"{{/unless}}>
                                <a href="/admin/users?page={{ pagination.first }}" aria-label="First">
                                    <span aria-hidden="true">&laquo;</span>
                                    First
                                </a>
                            </li>
                            <li {{#unless pagination.prev }}class="disabled"{{/unless}}>
                                <a href="/admin/users?page={{ pagination.prev }}" aria-label="Previous">
                                    <span aria-hidden="true">&lsaquo;</span>
                                    Prev
                                </a>
                            </li>

                            <li {{#unless pagination.next }}class="disabled"{{/unless}}>
                                <a href="/admin/users?page={{ pagination.next }}" aria-label="Next">Next
                                    <span aria-hidden="true">&rsaquo;</span>
                                </a>
                            </li>
                            <li {{#unless pagination.next }}class="disabled"{{/unless}}>
                                <a href="/admin/users?page={{ pagination.last }}" aria-label="Last">Last
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        {{/if}}
    </div>
</div>
