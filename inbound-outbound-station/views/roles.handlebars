<div class="row">
    <div class="col-md-8">
        <form class="form-inline" method="POST" action="/admin/roles/{{role.id}}">
            <div class="form-group">
                <label class="sr-only" for="name">Role Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Role Name" value="{{role.name}}" required />
            </div>
            
            <div name="isActive" class="checkbox">
                <label>
                <input type="checkbox"  name="is_active" id="is_active"  {{#compare role.status '==' 'active' }}checked{{/compare}}> Active 
                </label>
            </div>
            
            <button type="submit" class="btn btn-default">Submit</button>

        </form>
        <p></p>
        <h2>All roles</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each roles}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this.name}}</td>
                    <td><span class="label {{#compare status '==' 'active' }}label-success {{else}}label-danger{{/compare}} "> {{status}} </span></td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/admin/roles/edit/{{this.id}}">Edit</a>
                        <a class="btn btn-default btn-sm" href="/admin/roles/{{this.id}}/permissions">Permissions</a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>  
    </div>
    <div class="col-md-4">
          
    </div>
</div>
